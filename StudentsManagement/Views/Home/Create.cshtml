@model StudentCreateViewModel


@{ 
    ViewBag.Title = "Create Student";
}
 
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Name" class="mr-5 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <label asp-for="Email" class="mr-5 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

        </div>

        <div class="form-group row">
            <label asp-for="Class" class="mr-5 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Class" class="form-control" placeholder="Class">
                <span asp-validation-for="Class" class="text-danger"></span>
            </div>

        </div>


        <div class="form-group row">
            <label asp-for="Faculty" class="mr-5 col-form-label"></label>
            <div>
                <select asp-for="Faculty" class="custom-select mr-5"
                        asp-items="Html.GetEnumSelectList<Faculty>()">
                    <option value="">Please Select...</option>
                </select>
                <span asp-validation-for="Faculty" class="text-danger"></span>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>


        <div class="form-group row">
            <label asp-for="Picture" class="mr-5 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input multiple asp-for="Picture" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose Picture...</label>
                </div>
            </div>

        </div>






        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>

        @section Scripts
        { 
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }



    </form>
