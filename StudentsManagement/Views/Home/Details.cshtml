@model HomeDetailsViewModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;
@{

    ViewBag.Title = "Student Details";
    var pictureLocation = "~/Images/" + (Model.Student.PicturePath ?? "noprofilephoto.png");
}





<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@pictureLocation" asp-append-version="true" />

                <h4>Student ID : @Model.Student.Id</h4>
                <h4>Surname : @Model.Student.Surname</h4>
                <h4>Class : @Model.Student.Class</h4>
                <h4>Email: @Model.Student.Email</h4>
                <h4>Faculty: @Model.Student.Faculty</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" , asp-action="index" class="btn btn-primary">Back</a>
                @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <a asp-action="edit" asp-controller="home"
                       asp-route-id="@Model.Student.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="home" , asp-action="delete" class="btn btn-danger">Delete</a>
                }

            </div>
        </div>
    </div>
</div>




