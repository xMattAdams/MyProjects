
@model StudentEditViewModel


@{
    ViewBag.Title = "Edit Student Account";
    var pictureLocation = "~/Images/" + (Model.ActualPhotoPath ?? "noprofilephoto.png");
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="ActualPhotoPath" />
    <input hidden asp-for="Id"/>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="New name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>


    <div class="form-group row">
        <label asp-for="Surname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Surname" class="form-control" placeholder="New surname">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

    </div>



    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="New email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="Class" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Class" class="form-control" placeholder="New class">
            <span asp-validation-for="Class" class="text-danger"></span>
        </div>

    </div>


    <div class="form-group row">
        <label asp-for="Faculty" class="col-sm-3 col-form-label"></label>
        <div>
            <select asp-for="Faculty" class="custom-select mr-5"
                    asp-items="Html.GetEnumSelectList<Faculty>()">
                <option value="">Please Select...</option>
            </select>
            <span asp-validation-for="Faculty" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="form-group row">
        <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Picture" class="form-control custom-file-input">
                <label class="custom-file-label">Choose a new picture...</label>
            </div>
        </div>

        <div class="form-group row col-sm-5 offset-3">
        <img src="@pictureLocation" class="imageLook" asp-append-version="true" />
        
        </div>

    </div>






    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Change</button>
            <a asp-controller="home" asp-action="index" class="btn btn-danger">Cancel</a>
        </div>
    </div>

    @section Scripts
        {
        <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
        </script>
    }



</form>
