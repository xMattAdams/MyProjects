@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;

}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Assign users to this role or take this role from the users</h3>
        </div>
        <div class="card-body">
            @for(int i=0; i< Model.Count; i++)
            {
            <div class="from-check m-1">
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <label class="form-check-label">
                    @Model[i].UserName
                </label>
            </div>
            }
        </div>
        <div class="card card-footer">
            <input type="submit" value="Apply" class="btn btn-success" style="width:auto"/>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>
</form>